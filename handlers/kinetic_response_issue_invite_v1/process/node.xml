<?xml version="1.0" encoding="UTF-8"?>
<taskDefinition id="kinetic_response_issue_invite" name="Kinetic Response Issue Invite" schema_version="1.0" version="1">
  <author>support@kineticdata.com</author>
  <description>This handler invites a Kinetic Response Issue.</description>
  <helpurl>http://ktc.kineticdata.com/handler/kinetic_response_issue_invite/1</helpurl>
  <visible>true</visible>
  <deferrable>false</deferrable>
  <parameters>
    <parameter id="issue_guid" label="User Guid" required="true"
               tooltip="The guid of the issue to invite."/>
    <parameter id="invitee_email" label="Invitee Email" required="true"
               tooltip="The email of the invitee."/>
  </parameters>
  <handler name="kinetic_response_issue_invite" version="1">
    <infos>
    <info name="server_url">&lt;%= @info['server_url'] %&gt;</info>
    <info name="host_email">&lt;%= @info['host_email'] %&gt;</info>
    <info name="host_password">&lt;%= @info['host_password'] %&gt;</info>
    </infos>
    <parameters>
      <parameter name="issue_guid">&lt;%= @parameters['issue_guid'] %&gt;</parameter>
      <parameter name="invitee_email">&lt;%= @parameters['invitee_email'] %&gt;</parameter>
    </parameters>
  </handler>
  <results />
</taskDefinition>
